<% if @volunteer %>
  <h1>Volunteer name - <%= @volunteer.name %></h1>
  <h2>Project - <%= @project.title %></h2>

  <form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Update Volunteer Name</label>
    <input id="name" name="name" type="text" value="<%= @volunteer.name %>">
    <button type="submit">Update Volunteer</button>
  </form>

  <form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Delete volunteer</button>
  </form>

  <a href="/projects">Back to project list</a>
<% else %>
  <h3>No volunteers to be found!</h3>
<% end %>